{
  "entities": {
    "Registration": {
      "title": "Pilgrim Registration",
      "description": "Represents a single registration for a pilgrim or a group.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "The unique registration ID (KM-27-...)." },
        "fullName": { "type": "string" },
        "mobileNumber": { "type": "string" },
        "numberOfPeople": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "ghatId": { "type": "string" },
        "ghatName": { "type": "string" },
        "timeSlot": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "fullName", "mobileNumber", "numberOfPeople", "date", "ghatId", "ghatName", "timeSlot", "createdAt"]
    },
    "Ghat": {
      "title": "Ghat Information",
      "description": "Represents a Ghat with its details and time slots.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "The unique ID for the ghat (e.g., ram-kund-ghat)." },
        "name": { "type": "string" },
        "shortName": { "type": "string" },
        "imageUrl": { "type": "string" },
        "imageHint": { "type": "string" },
        "timeSlots": {
          "type": "array",
          "items": {
            "$ref": "#/backend/entities/TimeSlot"
          }
        }
      },
      "required": ["id", "name", "shortName", "timeSlots", "imageUrl", "imageHint"]
    },
    "TimeSlot": {
      "title": "Time Slot",
      "description": "Represents a time slot within a Ghat.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "time": { "type": "string" },
        "maxCapacity": { "type": "number" },
        "currentRegistrations": { "type": "number" }
      },
      "required": ["id", "time", "maxCapacity", "currentRegistrations"]
    },
    "MissingPersonReport": {
      "title": "Missing Person Report",
      "description": "Represents a report filed for a missing person.",
      "type": "object",
      "properties": {
        "caseId": { "type": "string" },
        "missingPersonName": { "type": "string" },
        "missingPersonMobile": { "type": "string" },
        "reporterContact": { "type": "string" },
        "lastSeenGhat": { "type": "string" },
        "detailedLocation": { "type": "string", "description": "More specific details about the last seen location." },
        "photoUrl": { "type": "string", "description": "A data URL of the missing person's photo." },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["Pending", "Under Investigation", "Found"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "broadcastSent": { "type": "boolean", "description": "Whether an alert has been broadcasted for this case." }
      },
      "required": ["caseId", "missingPersonName", "reporterContact", "lastSeenGhat", "detailedLocation", "description", "status", "createdAt"]
    },
    "HealthEmergencyAlert": {
      "title": "Health Emergency Alert",
      "description": "Represents a request for medical assistance.",
      "type": "object",
      "properties": {
        "caseId": { "type": "string" },
        "reporterName": { "type": "string" },
        "reporterContact": { "type": "string" },
        "peopleAffected": { "type": "number" },
        "issueType": { "type": "string" },
        "locationGhat": { "type": "string" },
        "detailedLocation": { "type": "string" },
        "details": { "type": "string" },
        "status": { "type": "string", "enum": ["Pending", "On-site", "Responded"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["caseId", "reporterName", "reporterContact", "peopleAffected", "issueType", "locationGhat", "detailedLocation", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/registrations/{registrationId}": {
      "schema": { "$ref": "#/backend/entities/Registration" },
      "description": "Stores individual pilgrim registrations."
    },
    "/ghats/{ghatId}": {
      "schema": { "$ref": "#/backend/entities/Ghat" },
      "description": "Stores information about each Ghat and its slots."
    },
    "/missing_persons/{reportId}": {
      "schema": { "$ref": "#/backend/entities/MissingPersonReport" },
      "description": "Stores reports of missing persons."
    },
    "/emergency_alerts/{alertId}": {
      "schema": { "$ref": "#/backend/entities/HealthEmergencyAlert" },
      "description": "Stores alerts for health emergencies."
    }
  }
}
